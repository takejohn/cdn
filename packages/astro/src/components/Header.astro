---
import UploadButton from "../components/UploadButton.astro";
import IconButton from "./IconButton.astro";
import Link from "./Link.astro";

interface Props {
    path: string[];
}

const { path } = Astro.props;
---

<div class="header">
    <div class="header-top">
        <div class="title-box">
            <h1>CDN File list</h1>
        </div>
        <div class="button-box">
            <IconButton id="list-layout-button" title="リスト形式" src="/static/list.svg" />
        </div>
        <div class="button-box">
            <IconButton id="grid-layout-button" title="グリッド形式" src="/static/grid.svg" />
        </div>
        <div class="button-box">
            <UploadButton />
        </div>
    </div>
    <div class="header-bottom">
        <p>
            <Link href="/"/>
            {() => {
                const result = [];
                for (const dirname of path) {
                    result.push(
                        <span>&gt;</span>,
                        <Link href={dirname} />
                    );
                }
                return result;
            }}
        </p>
    </div>
</div>

<style>
    .header-top {
        display: flex;
        top: 0;
        margin-bottom: 8px;
    }

    .title-box {
        text-align: center;
        font-family: sans-serif;
        width: 100%;
    }

    .button-box {
        margin: 0.25em;
    }
</style>

<!-- Google tag (gtag.js) -->
<script is:inline>
	const gtag_x = async () => {
	  try {
		const res = await fetch('/const');
		if (res.status === 204) return;
		if (!res.ok) {
		  throw new Error('Failed to fetch');
		}
		const data = await res.json();
		const gtagID = data.gtagID;
		if (!gtagID) return;
		const sc = document.createElement('script');
		sc.src = `https://www.googletagmanager.com/gtag/js?id=${gtagID}`;
		document.body.appendChild(sc);
		// Google tag (gtag.js)
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());    
		gtag('config', gtagID);
	  } catch (e) {
		console.error('Something went wrong', e);
	  }
	};
	gtag_x();
	document.addEventListener('astro:after-swap', () => {
	  gtag_x();
	});
  </script>
  